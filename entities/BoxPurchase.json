{
  "name": "BoxPurchase",
  "type": "object",
  "properties": {
    "box_id": {"type": "string", "description": "ID of subscription box"},
    "buyer_email": {"type": "string", "description": "Email of buyer"},
    "creator_email": {"type": "string", "description": "Email of creator"},
    "amount_paid": {"type": "number", "description": "Amount paid in LOVE tokens"},
    "content_unlocked": {"type": "array", "items": {"type": "string"}, "description": "IDs of content unlocked"}
  },
  "required": ["box_id", "buyer_email", "creator_email", "amount_paid"],
  "rls": {
    "create": {"buyer_email": "{{user.email}}"},
    "read": {"$or": [{"buyer_email": "{{user.email}}"}, {"creator_email": "{{user.email}}"}]},
    "update": {"user_condition": {"role": "admin"}},
    "delete": {"user_condition": {"role": "admin"}}
  }
}