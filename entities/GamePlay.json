{
  "name": "GamePlay",
  "type": "object",
  "properties": {
    "game_id": {"type": "string", "description": "ID of game played"},
    "player_email": {"type": "string", "description": "Email of player"},
    "result": {"type": "string", "enum": ["win", "lose", "draw"], "description": "Game result"},
    "tokens_spent": {"type": "number", "description": "LOVE tokens spent"},
    "tokens_won": {"type": "number", "description": "LOVE tokens won"},
    "score": {"type": "number", "description": "Game score"},
    "game_data": {"type": "object", "description": "Additional game-specific data"}
  },
  "required": ["game_id", "player_email", "result"],
  "rls": {
    "create": {"created_by": "{{user.email}}"},
    "read": {"player_email": "{{user.email}}"},
    "update": {"user_condition": {"role": "admin"}},
    "delete": {"user_condition": {"role": "admin"}}
  }
}